// Network configurations
amends "base_config.pkl"

// GNN configurations
gnn1_config: NetworkConfig = new {
  name = "gnn1"
  architecture = "GraphConvNet"
  hidden_dims = List(64, 128, 64)
  activation = "relu"
  dropout = 0.1
}

gnn2_config: NetworkConfig = new {
  name = "gnn2"
  architecture = "GATNet"
  hidden_dims = List(128, 256, 128)
  activation = "leaky_relu"
  dropout = 0.2
}

// Baseline configurations
baseline1_config: NetworkConfig = new {
  name = "baseline1"
  architecture = "MLP"
  hidden_dims = List(256, 512, 256, 128)
  activation = "relu"
  dropout = 0.3
}

// Training configurations
default_training: TrainingConfig = new {
  name = "default_training"
  batch_size = 64
  learning_rate = 0.001
  epochs = 200
  optimizer = "adamw"
  scheduler = "cosine"
}

// Environment configurations
calvin_env: EnvironmentConfig = new {
  name = "calvin_env"
  env_type = "Calvin"
  max_episode_steps = 1000
  reward_type = "sparse"
  observation_space = Map(
    "ee_pose", "continuous",
    "joint_pos", "continuous", 
    "cameras", "image",
    "object_poses", "continuous"
  )
}

// Export all configurations
output {
  networks = Map(
    "gnn1", gnn1_config,
    "gnn2", gnn2_config,
    "baseline1", baseline1_config
  )
  training = default_training
  environment = calvin_env
}
